<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/phoneContactRowCard"
                                    android:background="?android:selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp">

    <RelativeLayout
        android:tag="front"
        android:background="@color/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/userItemRowImage"
            android:src="@drawable/ic_photo_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />


        <TextView
            android:id="@+id/userItemRowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userItemRowImage"
            android:layout_toEndOf="@+id/userItemRowImage"
            android:singleLine="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView

            android:id="@+id/userItemRowEmail"
            android:layout_below="@+id/userItemRowName"
            android:layout_alignLeft="@+id/userItemRowName"
            android:layout_alignStart="@+id/userItemRowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />
    </RelativeLayout>


    <!-- just a divider -->
    <View android:background="@color/divider"
          android:layout_width="match_parent"
          android:layout_height="0.5dp" />

</android.support.v7.widget.CardView>